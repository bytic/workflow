{
    "name": "bytic/workflow",
    "type": "library",
    "description": "A workflow engine for ByTIC",
    "homepage": "https://github.com/workflow",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Solomon",
            "email": "hello@gabrielsolomon.ro"
        }
    ],
    "autoload": {
        "psr-4": {
            "ByTIC\\Workflow\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ByTIC\\Workflow\\Tests\\": "tests/src",
            "ByTIC\\Workflow\\Tests\\Fixtures\\": "tests/fixtures"
        }
    },
    "require": {
        "php": "^7.1",
        "bytic/inflector": "^1.0",
        "bytic/utility": "^1.0",
        "bytic/data-objects": "^1.0",
        "symfony/workflow": "^5.0"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^8.0|^9.0",
        "mockery/mockery": "^1.0",
        "phpbench/phpbench": "^0.17",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
